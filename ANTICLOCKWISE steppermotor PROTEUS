ORG 00H               
MAIN:  MOV P2, #0F0H  
              ACALL COUNTERCLOCKWISE 
       ACALL DELAY    
       SJMP MAIN     

COUNTERCLOCKWISE:
       MOV A, #08H   
       MOV P2, A
       ACALL DELAY
       MOV A, #04H    
       MOV P2, A
       ACALL DELAY
       MOV A, #02H    
       MOV P2, A
       ACALL DELAY
       MOV A, #01H  
       MOV P2, A
       ACALL DELAY
       RET        

DELAY:
       MOV R1, #0FFH  
DELAY_LOOP1:
       MOV R2, #0FFH  
DELAY_LOOP2:
       DJNZ R2, DELAY_LOOP2 
       DJNZ R1, DELAY_LOOP1
       RET            
END
