#include <lpc214x.h>

void delay() {
    for (unsigned int i = 0; i < 1000; i++);
}

int main() {
    PINSEL1 = 0x00080000; // Select DAC output pin
    int value = 0;
    int step = 1;
    
    while(1) {
        DACR = (value << 6); // Send value to DAC
        
        if(value >= 1023) step = -1; // If max value, decrement
        if(value <= 0) step = 1; // If min value, increment
        
        value += step;
        delay();
    }
}
