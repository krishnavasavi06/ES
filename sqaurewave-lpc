#include <lpc214x.h>

void delay() {
    for (unsigned int i = 0; i < 100000; i++);
}

int main() {
    PINSEL1 = 0x00080000; // Select DAC output pin
    while(1) {
        DACR = 0x000003FF; // Maximum value for 10-bit DAC (1023)
        delay();
        DACR = 0x00000000; // Minimum value for 10-bit DAC (0)
        delay();
    }
}
